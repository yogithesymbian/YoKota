<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.init.SliderActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_logo_first_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp"
            android:scaleType="fitXY"
            app:civ_border_overlay="true"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19999999"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/txt_title_first_view"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Servic Government"
            android:textColor="@color/white"
            android:background="#33000000"
            android:elevation="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_logo_first_view"
            app:layout_constraintStart_toStartOf="@+id/img_logo_first_view"
            app:layout_constraintTop_toBottomOf="@+id/img_logo_first_view" />

        <TextView
            android:id="@+id/txt_desc_view"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:gravity="center|center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci atque dolores doloribus eaque eos exercitationem, omnis pariatur repellendus vitae voluptatem. Dolorum eaque iste magni nemo nobis, quo totam? Aut, hic."
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="#33000000"
            android:elevation="10dp"
            android:textSize="14sp"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="@+id/txt_title_first_view"
            app:layout_constraintStart_toStartOf="@+id/txt_title_first_view"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_first_view" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_first_view"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_first_view_2"
            android:layout_width="0dp"
            android:layout_height="306dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cv_first_view"
            app:layout_constraintStart_toStartOf="@+id/cv_first_view"
            app:layout_constraintTop_toBottomOf="@+id/cv_first_view"
            app:layout_constraintVertical_bias="0.0">

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>